<h1>Doctor Show Page</h1><hr>

<h3><%= @doctor.name %></h3>
<p>Specialty: <%= @doctor.specialty %></p>
<p>University: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital_name %></p>

<div id='patients'>
  <h5>Current Patients</h5>
  <ul>
  <% @doctor.patients.each do |patient| %>
    <li>
    <%= patient.name %>
    <%= form_with url: doctor_patient_path(@doctor, patient), method: :delete, local: true do |f| %>
      <%= f.submit "Remove #{patient.name} from caseload" %>
    <% end %>
    </li><br>
  <% end %>
  </ul>
</div>

